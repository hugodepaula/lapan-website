---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "LAPAN | Laboratório de Pesquisa Aplicada em Neurociência",
  description = "Pesquisa e extensão acadêmica com foco em inovação, método e impacto social."
} = Astro.props;

const navItems = [
  { label: "Início", href: "#inicio" },
  { label: "Pesquisa", href: "#pesquisa" },
  { label: "Projetos", href: "#projetos" },
  { label: "Contato", href: "#contato" }
];

const footerLinks = [
  { label: "Contato", href: "mailto:contato@lapan.edu.br" },
  { label: "LinkedIn", href: "https://www.linkedin.com", external: true },
  { label: "Instagram", href: "https://www.instagram.com", external: true }
];
---

<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body>
    <a
      href="#conteudo-principal"
      class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-50 focus:rounded-md focus:bg-surface focus:px-3 focus:py-2 focus:text-sm focus:font-semibold"
    >
      Pular para o conteúdo principal
    </a>

    <header class="border-b border-brand-100 bg-surface/95 backdrop-blur-sm">
      <div class="mx-auto flex w-full max-w-content flex-col gap-4 px-4 py-4 sm:px-6 md:flex-row md:items-center md:justify-between lg:px-8">
        <a href="#inicio" class="inline-flex items-center gap-3 rounded-md text-ink transition hover:text-accent-700">
          <img
            src="/images/logo_rect.png"
            alt="Logo do LAPAN"
            class="h-12 w-auto"
            loading="eager"
            decoding="async"
          />
          <span class="text-sm font-semibold tracking-wide text-brand-700 sm:text-base">LAPAN</span>
        </a>

        <nav aria-label="Navegação principal">
          <ul class="flex flex-wrap items-center gap-1 sm:gap-2">
            {navItems.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="inline-flex rounded-md px-3 py-2 text-sm font-medium text-brand-700 transition hover:bg-brand-50 hover:text-accent-700"
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
    </header>

    <main id="conteudo-principal" class="mx-auto w-full max-w-content px-4 py-10 sm:px-6 lg:px-8">
      <slot />
    </main>

    <footer id="contato" class="border-t border-brand-100 bg-brand-900 text-brand-50">
      <div class="mx-auto grid w-full max-w-content gap-8 px-4 py-8 sm:px-6 md:grid-cols-2 md:items-end lg:px-8">
        <div>
          <p class="text-sm uppercase tracking-[0.12em] text-brand-300">Laboratório</p>
          <p class="mt-2 text-lg font-semibold">LAPAN — Pesquisa Aplicada</p>
          <p class="mt-2 max-w-prose text-sm text-brand-100">
            Produzimos conhecimento confiável com rigor acadêmico, linguagem acessível e compromisso com impacto social.
          </p>
        </div>

        <div class="md:justify-self-end">
          <p class="text-sm font-semibold text-brand-100">Links</p>
          <ul class="mt-3 flex flex-wrap gap-4 text-sm">
            {footerLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  target={link.external ? "_blank" : undefined}
                  rel={link.external ? "noreferrer" : undefined}
                  class="rounded-md text-brand-50 transition hover:text-accent-100"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
      <div class="border-t border-brand-700/80 px-4 py-4 text-center text-xs text-brand-300 sm:px-6 lg:px-8">
        © {new Date().getFullYear()} LAPAN. Todos os direitos reservados.
      </div>
    </footer>
  </body>
</html>

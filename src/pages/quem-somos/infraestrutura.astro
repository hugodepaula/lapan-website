---
import BaseLayout from "../../layouts/BaseLayout.astro";

const equipamentos = [
  "Acuidade visual",
  "Visão funcional",
  "Aberrometria",
  "Sensibilidade ao contraste",
  "Foto-retinoscopia digital",
  "Ofuscamento",
  "Processamento magnocelular",
  "Frequency Doubling Technology",
  "Rastreamento ocular (Eyetracker)",
  "Diagnóstico perceptual da Síndrome de Irlen"
];
---

<BaseLayout
  title="Infraestrutura | LAPAN"
  description="Infraestrutura laboratorial para avaliação e pesquisa aplicada em neurociência da visão."
>
  <section class="grid gap-8 lg:grid-cols-[1.05fr_0.95fr] lg:items-start">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.14em] text-accent-700">Quem Somos</p>
      <h1 class="mt-3 text-4xl text-brand-900 sm:text-5xl">Infraestrutura</h1>
      <p class="mt-5 text-base leading-relaxed text-neutral-700">
        O laboratório possui equipamentos dedicados à avaliação funcional, análise perceptual e desenvolvimento de
        protocolos técnicos para pesquisa aplicada.
      </p>
      <ul class="mt-6 grid gap-2 text-sm text-neutral-700 sm:grid-cols-2">
        {equipamentos.map((item) => (
          <li class="rounded-md border border-brand-200 bg-surface px-3 py-2">{item}</li>
        ))}
      </ul>
    </div>

    <figure class="overflow-hidden rounded-2xl border border-brand-200 bg-surface shadow-soft">
      <img
        src="/images/migration/quem-somos/infraestrutura.jpg"
        alt="Infraestrutura de pesquisa do laboratório"
        class="h-full w-full object-cover"
        loading="lazy"
        decoding="async"
      />
    </figure>
  </section>
</BaseLayout>

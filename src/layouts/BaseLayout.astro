---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "LAPAN | Laboratório de Pesquisa Aplicada a Neurociências da Visão",
  description = "Pesquisa e extensão acadêmica com foco em inovação, método e impacto social."
} = Astro.props;

const navItems = [
  { label: "Quem Somos", href: "/quem-somos" },
  { label: "Projetos", href: "/projetos" },
  { label: "Publicações", href: "/publicacoes" },
  { label: "Eventos", href: "/eventos" },
  { label: "Equipe", href: "/equipe" },
  { label: "Parceiros", href: "/parceiros" },
  { label: "Contato", href: "/contato" }
];

const footerLinks = [
  { label: "Contato", href: "/contato" },
  { label: "LinkedIn", href: "https://www.linkedin.com", external: true },
  { label: "Instagram", href: "https://www.instagram.com", external: true }
];
---

<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link
      href="https://fonts.googleapis.com/css2?family=Literata:opsz,wght@7..72,500;7..72,600;7..72,700&family=Source+Sans+3:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="selection:bg-accent-100 selection:text-brand-900">
    <a
      href="#conteudo-principal"
      class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-50 focus:rounded-md focus:bg-surface focus:px-3 focus:py-2 focus:text-sm focus:font-semibold"
    >
      Pular para o conteúdo principal
    </a>

    <header class="sticky top-0 z-50 border-b border-brand-200 bg-surface/95 backdrop-blur-sm">
      <div class="mx-auto w-full max-w-content px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between py-3 md:py-4">
          <a href="/" class="inline-flex items-center gap-3 rounded-md transition hover:opacity-90">
            <img
              src="/images/logo_rect.png"
              alt="Logo do LAPAN"
              class="h-11 w-auto md:h-12"
              loading="eager"
              decoding="async"
            />
          </a>

          <nav class="hidden md:block" aria-label="Navegação principal">
            <ul class="flex items-center gap-1 lg:gap-2">
              {navItems.map((item) => (
                <li>
                  <a
                    href={item.href}
                    class="inline-flex rounded-md px-3 py-2 text-sm font-semibold text-brand-600 transition duration-200 hover:bg-brand-50 hover:text-accent-700"
                  >
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </nav>

          <details class="group relative md:hidden">
            <summary
              class="inline-flex cursor-pointer list-none items-center rounded-md border border-brand-200 px-3 py-2 text-sm font-semibold text-brand-800 transition hover:border-brand-400 hover:bg-brand-50"
              aria-label="Abrir menu"
            >
              Menu
            </summary>
            <nav
              aria-label="Navegação principal mobile"
              class="absolute right-0 mt-2 w-64 rounded-xl border border-brand-200 bg-surface p-2 shadow-soft"
            >
              <ul class="space-y-1">
                {navItems.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class="block rounded-md px-3 py-2 text-sm font-semibold text-brand-700 transition duration-200 hover:bg-brand-50 hover:text-accent-700"
                    >
                      {item.label}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          </details>
        </div>
      </div>
    </header>

    <main id="conteudo-principal" class="mx-auto w-full max-w-content px-4 py-10 sm:px-6 lg:px-8 lg:py-12">
      <slot />
    </main>

    <footer class="mt-12 border-t border-brand-200 bg-brand-900 text-brand-100">
      <div class="mx-auto grid w-full max-w-content gap-8 px-4 py-10 sm:px-6 md:grid-cols-2 lg:px-8">
        <div>
          <p class="text-xs uppercase tracking-[0.14em] text-brand-200">Laboratório de Pesquisa</p>
          <p class="mt-2 text-lg font-semibold text-surface">LAPAN</p>
          <p class="mt-3 max-w-prose text-sm leading-relaxed text-brand-100">
            Produzimos conhecimento científico com rigor metodológico, linguagem clara e compromisso com impacto social.
          </p>
        </div>

        <div class="md:justify-self-end">
          <p class="text-sm font-semibold text-surface">Contato e Redes</p>
          <ul class="mt-3 flex flex-wrap gap-4 text-sm">
            {footerLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  target={link.external ? "_blank" : undefined}
                  rel={link.external ? "noreferrer" : undefined}
                  class="rounded-md text-brand-100 transition duration-200 hover:text-accent-100"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
      <div class="border-t border-brand-600 px-4 py-4 text-center text-xs text-brand-200 sm:px-6 lg:px-8">
        © {new Date().getFullYear()} LAPAN. Todos os direitos reservados.
      </div>
    </footer>
  </body>
</html>

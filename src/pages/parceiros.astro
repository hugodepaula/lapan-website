---
import BaseLayout from "../layouts/BaseLayout.astro";

const fundadores = [
  { nome: "Fundação Hospital de Olhos", imagem: "/images/migration/parceiros/fundacao-holhos.jpg" },
  { nome: "UFMG", imagem: "/images/migration/parceiros/ufmg.jpg" },
  { nome: "Labbio", imagem: "/images/migration/parceiros/labbio.jpg" }
];

const parceiros = [
  { nome: "CNPq", imagem: "/images/migration/parceiros/cnpq.jpg" },
  { nome: "Bom Começo", imagem: "/images/migration/parceiros/bom-comeco.jpg" }
];

const apoio = [
  { nome: "FAPEMIG", imagem: "/images/migration/parceiros/fapemig.jpg" },
  { nome: "Gates Foundation", imagem: "/images/migration/parceiros/gates-foundation.jpg" }
];
---

<BaseLayout
  title="Parceiros | LAPAN"
  description="Rede de fundadores, parceiros e apoiadores do laboratório."
>
  <section>
    <p class="text-xs font-semibold uppercase tracking-[0.14em] text-accent-700">Institucional</p>
    <h1 class="mt-3 text-4xl text-brand-900 sm:text-5xl">Parceiros</h1>
    <p class="mt-5 max-w-3xl text-base leading-relaxed text-neutral-700">
      Esta página consolida o conteúdo migrado do WordPress/Jekyll para exibir instituições fundadoras, parceiros e
      apoiadores do laboratório.
    </p>
  </section>

  <section class="pt-12">
    <h2 class="text-2xl text-brand-900">Fundadores</h2>
    <div class="mt-5 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {fundadores.map((item) => (
        <figure class="overflow-hidden rounded-xl border border-brand-200 bg-surface shadow-soft">
          <img src={item.imagem} alt={item.nome} class="h-44 w-full object-cover" loading="lazy" decoding="async" />
          <figcaption class="px-4 py-3 text-sm font-semibold text-brand-800">{item.nome}</figcaption>
        </figure>
      ))}
    </div>
  </section>

  <section class="pt-12">
    <h2 class="text-2xl text-brand-900">Parceiros</h2>
    <div class="mt-5 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {parceiros.map((item) => (
        <figure class="overflow-hidden rounded-xl border border-brand-200 bg-surface shadow-soft">
          <img src={item.imagem} alt={item.nome} class="h-44 w-full object-cover" loading="lazy" decoding="async" />
          <figcaption class="px-4 py-3 text-sm font-semibold text-brand-800">{item.nome}</figcaption>
        </figure>
      ))}
    </div>
  </section>

  <section class="pt-12">
    <h2 class="text-2xl text-brand-900">Apoio</h2>
    <div class="mt-5 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {apoio.map((item) => (
        <figure class="overflow-hidden rounded-xl border border-brand-200 bg-surface shadow-soft">
          <img src={item.imagem} alt={item.nome} class="h-44 w-full object-cover" loading="lazy" decoding="async" />
          <figcaption class="px-4 py-3 text-sm font-semibold text-brand-800">{item.nome}</figcaption>
        </figure>
      ))}
    </div>
  </section>
</BaseLayout>
